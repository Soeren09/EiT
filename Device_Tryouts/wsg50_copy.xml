<SerialDevice name="WSG50">

  <!--BASE-->
  <Frame name="Base" type="Fixed">
    <RPY> 0 0 0 </RPY>
    <Pos> 0 0 0 </Pos>
  </Frame>

  <!--####################################################-->

  <!--LEFT FINGER-->
  <Joint name="Finger1" refframe="Base" type="Prismatic">
    <RPY>0 90 180</RPY> <Pos>0 0 0</Pos>
  </Joint>

  <!-- <Frame name="Enigma" type="Movable">
    <RPY> 0 0 0 </RPY>
    <Pos> 0 0 0 </Pos>
  </Frame> -->


  <!--####################################################-->

  <!--RIGHT FINGER-->
  <Joint name="Finger2" refframe="Finger1" type="Prismatic">
    <RPY>0 90 0</RPY> <Pos>0 0 0</Pos>
  </Joint> 
  
   <Frame name="Enigma" refframe="Finger2" type="Movable">
    <RPY> 0 0 0 </RPY>
    <Pos> 0 0 0 </Pos>
  </Frame>

  <Joint name="Finger3" refframe="Enigma" type="Prismatic">
    <RPY>0 90 0</RPY> <Pos>0 0 0</Pos>
  </Joint> 

  <!-- <Joint name="Finger4" refframe="Finger3" type="Prismatic">
    <RPY>0 90 0</RPY> <Pos>0 0 0</Pos>
    <Depend on="Finger3" gain="1" offset="0" />
  </Joint>  -->

  <!-- JOINT POSITION AND VELOCITY LIMITS-->

  <PosLimit refjoint="Finger1" min="0.0" max="0.055" />  
  <PosLimit refjoint="Finger2" min="0.0" max="0.055" /> 
  <PosLimit refjoint="Finger3" min="0.0" max="0.055" /> 
  <VelLimit refjoint="Finger1" max="0.42" /> 


  <!--####################################################-->

  <!-- DRAWABLES-->


    <Drawable name="Finger1Geo" refframe="Finger1">
	<RPY>180 -90 -90</RPY><Pos>-0.024 0 0</Pos>
	<Polytope file="components/stompa_finger" />
  </Drawable>

  <Drawable name="Finger2Geo" refframe="Finger2">
	<RPY>180 -90 -90</RPY><Pos>-0.024 0 0</Pos>
	<Polytope file="components/stompa_arm_1" />
  </Drawable>
  
  <Drawable name="EnigmaGeo" refframe="Enigma">
	<RPY>0 -0 0</RPY><Pos>-0.04 0 0</Pos>
	<Polytope file="components/stompa_arm_1" />
  </Drawable>

  <Drawable name="Finger3Geo" refframe="Finger3">
	<RPY>180 -90 -90</RPY><Pos>0.024 0 0</Pos>
	<Polytope file="components/stompa_arm_2" />
  </Drawable>

  <Drawable name="Finger4Geo" refframe="Finger4">
	<RPY>180 -90 -90</RPY><Pos>0.024 0 0</Pos>
	<Polytope file="components/stompa_wheels" />
  </Drawable>

  <Q name="Home">0.05 0 0 </Q>	

</SerialDevice>
